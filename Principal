package exercicio;
import java.util.Scanner;

/**
 *
 * @author Arkanjo
 */
public class Aplicacao {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
      Scanner entrada = new Scanner(System.in);
      
    PenDrive Pen = new PenDrive();
    
    System.out.println("Digite a merca do pendrive:");
    Pen.setMarca(entrada.nextLine());
    
    System.out.println("Digite o modelo");
    Pen.setModelo(entrada.nextLine());
    
    System.out.println("Digite a capacidade:");
    Pen.setCapacidade(entrada.nextInt());
    
    System.out.println("Digite o comprimento:");
    Pen.setComprimento(entrada.nextDouble());
    
    System.out.println("Digite a largura:");
    Pen.setLargura(entrada.nextDouble());
    
    System.out.println("Digite a profundidade:");
    Pen.setProfundidade(entrada.nextDouble());
    
    System.out.println("Digite o peso");
    Pen.setPeso(entrada.nextDouble());
    
    
    System.out.println("Marca:"+ Pen.getMarca()+"\nModelo:" + Pen.getModelo() +"\nCapacidade:" + Pen.getCapacidade());
    
    
    
    
    
    
    
        
        
        
        
    }
    
}
